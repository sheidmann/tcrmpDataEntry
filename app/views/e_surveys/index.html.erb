<div class="main">
  <div class="container">
    <%= button_to "New ECMP Survey", '/e_surveys/new', method: :get %>
    <div style="margin-top: 15px"></div>
    <% if current_user.manager? %>
      <%= button_to "View/Export Abiotic", '/e_plots', method: :get %>
      <%= button_to "View/Export Coral", '/e_plot_corals', method: :get %>
      <%= button_to "View/Export ESA", '/e_esa_pas', method: :get %>
    <% end %>
    <h1>ECMP Surveys</h1>
    <table class="display table table-striped table-condensed table-sortable">
      <thead>
        <% #print table header %>
        <tr>
          <th>Diver</th>
          <th>Buddy</th>
          <th>Field ID</th>
          <th>Team</th>
          <th>Role</th>
          <th>Date Completed</th>
          <th>Time</th>
          <th>Habitat</th>
          <th>Date Entered</th>
          <th>Proofed?</th>
        </tr>
      </thead>
      <tbody>
        <% #print table fields %>
        <% @esurv.each do |es| %>
          <tr data-link="<%=e_survey_path(es.id)%>">
            <td><%= es.user.name %></td>
            <td><%= es.buddy %></td>
            <td><%= es.fid %></td>
            <td><%= es.team %></td>
            <td><%= es.role %></td>
            <td><%= es.date_completed %></td>
            <td><%= es.try(:begin_time).try(:strftime, "%H:%M") %></td>
            <td><%= es.habitat %></td>
            <td><%= es.created_at %></td>
            <td><%= es.proofed %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="main">
  <div class="container">
        <%= button_to "View Managers", '/managers', method: :get%>
        <%= button_to "New User", '/users/new', method: :get%>
        
        <table id="userList", class="display table table-striped table-condensed">
        <thead>
        <tr>
          <th>Diver Number</th>
          <th>Diver Name</th>
          <th>Diver Email</th>
          <th>Agency</th>
          <th>Active Diver?</th>
          <th>Role</th>
          <th>Edit</th>
          <th>Destroy</th>
        </tr>
      </thead>
      <tbody>
      <% @all_users.each do |u| %>
        <tr>
          <td><%= u.id %></td>
          <td><%= u.name %></td>
          <td><%= u.email %></td>
          <td><%= u.agency %></td>
          <td><%= u.active %></td>
          <td><%= u.role %></td>
          <td><%= link_to 'edit', edit_user_path(u.id) %></td>
          <% if !u.manager? %>
            <td><%= link_to 'destroy', u, data: { confirm: 'Are you sure?' }, method: :delete %></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
      </table>
  </div>
</div>
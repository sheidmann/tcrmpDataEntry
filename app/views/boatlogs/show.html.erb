<div class="container">
<div class='formContainer'>
  <%= button_to "Back to Boatlogs", '/boatlogs', method: :get%>
  <div class="showActions" style="margin-top: 20px">
    <div class="btn-group-vertical">
      <%= button_to('Edit Boatlog', edit_boatlog_path(@boatlog), :method => "get") %>
      <%= button_to('Delete Boatlog', @boatlog, data: { confirm: 'Are you sure?' }, method: :delete) %>
    </div>
  </div>
  <div id="sampleSection" class="sectionDiv">
  <div class='show_section_1'>
    <div id='section_1_part_1'>

      <dl class="dl-horizontal">
        <dt>Project</dt><dd><%= @boatlog.manager.project %></dd>
      </dl>
      <dl class="dl-horizontal">
        <dt>Sample Date</dt><dd><%= @boatlog.date_completed %></dd>
      </dl>
      <dl class="dl-horizontal">
        <dt>Sample Time</dt><dd><%= @boatlog.begin_time.strftime("%H:%M") %></dd>
      </dl>
      <dl class="dl-horizontal">
        <dt>Site</dt><dd><%= @boatlog.site.site_name %></dd>
      </dl>
      <dl class="dl-horizontal">
        <dt>Notes</dt><dd><%= @boatlog.notes %></dd>
      </dl>
    </div>

    <div id='section_1_part_2'>
      <h2>Surveys</h2>
      <table id="boatlogSurveyList", class="display table table-striped" style="width: auto">
        <thead>
          <% #print table header %>
          <tr>
            <th>Survey Type</th>
            <th>Replicate</th>
            <th>Observer</th>
          </tr>
        </thead>
        <tbody>
          <% @boatlog_surveys.each do |b_survey|  %>
            <tr>
              <td><%= SurveyType.find(b_survey.survey_type_id).type_name %></td>
              <td><%= b_survey.rep %></td>
              <td><%= User.find(b_survey.user_id).name %></td>
            </tr>   
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  </div>
</div>
</div>
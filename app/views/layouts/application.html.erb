<!DOCTYPE html>
<html>
  <head>
    <div class = "header">
      <a href="home" class="logo">CompanyLogo</a>
      <% if current_user %>
        <a> <%= link_to current_user.name, 'userhome' %></a>
        <a> <%= link_to "Log out", logout_path, method: "get" %> </a>
      <% else %>
        <a><%= link_to "Login", 'login' %></a>
      <% end %>
    </div>
    <title>TcrmpDataEntry</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>

  </body>
</html>
